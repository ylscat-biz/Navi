<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/def_margin"
        android:layout_marginRight="@dimen/def_margin"
        android:layout_marginTop="@dimen/def_margin">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/def_margin"
            android:paddingRight="@dimen/def_margin"
            android:src="@drawable/back" />

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <AutoCompleteTextView
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_side"
                android:gravity="center_vertical"
                android:hint="搜索关键字"
                android:imeOptions="actionSearch|flagNoExtractUi"
                android:paddingLeft="10dp"
                android:paddingRight="40dp" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:src="@drawable/search" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        ptr:ptr_pull_to_fresh="false"
        >
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/def_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/def_margin"
            android:paddingRight="@dimen/def_margin">

            <TextView
                android:id="@+id/gas"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_gray_border"
                android:gravity="center"
                android:padding="5dp"
                android:text="加油站"
                android:textColor="@color/teal"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/restaurant"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_corner_gray_border"
                android:gravity="center"
                android:padding="5dp"
                android:text="餐厅"
                android:textColor="@color/teal"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/hotel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_corner_gray_border"
                android:gravity="center"
                android:padding="5dp"
                android:text="住宿"
                android:textColor="@color/teal"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/parking"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_corner_gray_border"
                android:gravity="center"
                android:padding="5dp"
                android:text="停车场"
                android:textColor="@color/teal"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/def_margin"
            android:layout_marginTop="@dimen/def_margin"
            android:drawableLeft="@drawable/place"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="搜索记录"
            android:textColor="#888"
            android:textSize="18dp" />

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/def_margin"
            android:paddingRight="@dimen/def_margin"></org.apmem.tools.layouts.FlowLayout>
    </LinearLayout>
    </FrameLayout>
</LinearLayout>